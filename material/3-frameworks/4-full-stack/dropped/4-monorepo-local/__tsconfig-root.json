{
  "extends": "@tsconfig/node18/tsconfig.json",

  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "paths": {
      "@server/*": ["./server/src/*"]
    }
  }
}